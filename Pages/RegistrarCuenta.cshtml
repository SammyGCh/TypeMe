@page
@model RegistrarCuentaModel

<div class="card border-danger contenedor">
    <div class="card-header header">
        <h1 class="card-title titulo">Registrar cuenta</h1>
    </div>
    <div class="card-body">
        <p>Ingresa los datos solicitados para formar parte de TypeMe</p>

        <form method="POST">
            <div class="contenedorInputs">
                <div class="form-group row">
                    <label class=" col-sm-5 col-form-label"><span style="color: red;">*</span> Email:
                    </label>
                    <div class="col-sm-7">
                        <input type="email" class="form-control" id="emailPrincipal" asp-for="EmailPrincipal"
                            placeholder="correo@ejemplo.com" required>
                    </div>
                </div>

                <div class="form-group row">
                    <label class=" col-sm-5 col-form-label"><span style="color: red;">*</span> Email secundario:
                    </label>
                    <div class="col-sm-7">
                        <input type="email" class="form-control" id="emailSecundario" asp-for="EmailSecundario"
                            placeholder="correo@ejemplo.com" required>
                    </div>
                </div>

                <div class="form-group row">
                    <label class=" col-sm-5 col-form-label"><span style="color: red;">*</span> Usuario: </label>
                    <div class="col-sm-5">
                        <input type="text" class="form-control" id="usuario" asp-for="Usuario" required>
                    </div>
                </div>

                <div class="form-group row">
                    <label class=" col-sm-5 col-form-label"><span style="color: red;">*</span> Contraseña: </label>
                    <div class="col-sm-5">
                        <input type="password" class="form-control" id="password" minlength="5" asp-for="Password" required>
                    </div>
                </div>

                <div class="form-group row">
                    <label class=" col-sm-5 col-form-label"><span style="color: red;">*</span> Confirmar contraseña:
                    </label>
                    <div class="col-sm-5">
                        <input type="password" class="form-control" id="confirmacionPassword" minlength="5" asp-for="ConfirmacionPassword"
                            required>
                    </div>
                </div>
            </div>

            <small style="color: red;">* Campos requeridos</small>

            <div class="form-group colum contenedorBotonRegistrar">
                <button type="submit" class="btn btn-danger btn-lg btn-block">Crear cuenta</button>
            </div>

        </form>

        <div class="form-group colum contenedorBotonCancelar">
            <a type="button" class="btn btn-outline-danger btn-lg btn-block" asp-page="/Index">Cancelar</a>
        </div>
    </div>
</div>

@section Scripts {
    
}


